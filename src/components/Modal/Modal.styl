:local
    .modal
        min-width 200px
        background $white-color
        z-index 9999
        position absolute
        top 15%
        left 50%
        box-shadow 0 2px 2px rgba(0,0,0,.3)
        transform translate(-50%, 0)

    .overlay
        width: 100%;
        height: 100%;
        background: hsla(0, 0%, 0%, 0.22);
        position: fixed;
        top: 0;
        left: 0;
        opacity 1
        z-index 999

