.sidebar
  height 100%
  overflow hidden
  box-shadow 0 2px 2px rgba(0, 0, 0, .3)
  box-sizing border-box
  background $white-color
  position absolute
  top: 0
  left 0
  z-index 9999

.overlay
  width: 100%;
  height: 100%;
  background: hsla(0, 0%, 0%, 0.22);
  position: fixed;
  top: 0;
  left: 0;
  opacity 0
  z-index 999

