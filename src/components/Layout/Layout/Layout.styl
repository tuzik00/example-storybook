.Layout
  display flex
  height 100vh
  background-color $white-color
  position relative

  &_theme-dark
    color alpha($white-color, 90%)
    background-color alpha($black-color, 95%)

  &__main
    display flex
    flex-direction column
    flex-grow 1

  &__content
    flex-grow 1
    background #f1f3f4