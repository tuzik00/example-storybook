.LayoutToggleButton
  width 30px
  display inline-block
  cursor pointer
  margin 0 rem(7)

  &:after, &:before, & div
    background-color $gray-color
    border-radius 3px
    content ''
    display block
    height 3px
    margin 7px 0
    transition transform .2s ease-in-out

  &_theme-dark
    &:after, &:before, & div
      background-color lighten($black-color, 10%)

  &_active
    &:before
      transform: translateY(10px) rotate(135deg)

    &:after
      transform: translateY(-10px) rotate(-135deg)

    & div
      transform: scale(0)
