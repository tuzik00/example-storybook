.LayoutContent
  display flex
  flex-direction column
  height 100%

  &_theme-dark
    & ^[0]__header
      border-bottom 1px solid alpha($black-color, 90%)

  &__header
    padding rem(20)
    box-sizing border-box
    border-bottom 1px solid $gray-color

  &__container
    display flex
    margin rem(20)
    flex-grow 1
    +below(1050px)
        flex-wrap wrap

  &__content
    display flex
    flex-direction column
    margin-right 15px
    flex-grow 1
    +tablet()
      margin-right 0
    +mobile()
      margin-right 0

  &__rightbar
    flex-grow 1