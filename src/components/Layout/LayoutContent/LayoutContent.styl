.LayoutContent
  display flex
  flex-direction column

  &_theme-dark
    & ^[0]__header
      border-bottom 1px solid alpha($black-color, 90%)

  &__header
    padding rem(20)
    box-sizing border-box
    border-bottom 1px solid $gray-color

  &__container
    display flex
    flex-wrap wrap
    margin rem(20)

  &__content
    flex-grow 1