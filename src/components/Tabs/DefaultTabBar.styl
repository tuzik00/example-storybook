:local
  .tab_bar
    display flex
    flex-wrap wrap
    position relative
    margin-bottom 1rem

  .tab_bar_item
    padding .5rem 1rem
    cursor pointer
    box-sizing border-box

  .active
    color $primary-color
    transition color 250ms ease-in-out
    cursor auto

  .line
    position absolute
    bottom -1px
    left 0
    height 2px
    background-color $primary-color
    transition left 250ms ease-in-out, width 250ms ease-in-out, opacity 250ms ease-in-out
