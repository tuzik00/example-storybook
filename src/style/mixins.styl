heading($font-size, $line-height, $font-weight=700, $color=$black-color){
  font-size $font-size
  line-height $line-height
  font-weight $font-weight
  color $color
}

rem($value, $base = $font-size)
  $max = length($value)

  $remValues = ()
  for $i in (0...$max)
    push($remValues, _convert-to-rem( $value[$i], $base ))

  return $remValues

_convert-to-rem($px, $base)
  if $is-ie && $is-ie--version <= 8
    ($px)px
  else if (typeof($px) == 'unit')
    if ((unit($px) == '' || unit($px) == 'px') && ($px != 0))
      return (round($px / $base, 3))rem
    else
      return 0